cd ./bin
#rm -rf *

nasm -f aout ../src/asm/helpers.asm -o asm_helpers.o
nasm -f aout ../src/asm/interrupciones/handlers.asm -o asm_int_handlers.o
nasm -f aout ../src/asm/interrupciones/helpers.asm -o asm_int_helpers.o
nasm -f aout ../src/asm/kstart.asm -o asm_kstart.o
nasm -f aout ../src/asm/loader.asm -o asm_loader.o

gcc -c ../src/c/helpers.c -o c_helpers.o -fno-builtin
gcc -c ../src/c/interrupciones/funciones_de_atencion.c -o c_funciones_de_atencion.o -fno-builtin
gcc -c ../src/c/interrupciones/helpers.c  -o c_helpers.o -fno-builtin
gcc -c ../src/c/kernel.c -o c_kernel.o -fno-builtin

ld -T ../link.ld -o kernel.bin asm_helpers.o asm_int_handlers.o asm_int_helpers.o asm_kstart.o asm_loader.o c_helpers.o c_funciones_de_atencion.o c_helpers.o c_kernel.o
